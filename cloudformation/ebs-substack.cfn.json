  "Outputs": {
    "Volumeids": {
      "Description": "Volume IDs of the resulted EBS volumes",
      "Value": {
        "Fn::If": [
          "UseVol5",
          {
            "Fn::Join": [
              ",",
              [
                {
                  "Fn::If": [
                    "Vol1_UseExistingEBSVolume",
                    {
                      "Fn::Select": [
                        "0",
                        {
                          "Ref": "EBSVolumeId"
                        }
                      ]
                    },
                    {
                      "Ref": "Volume1"
                    }
                  ]
                },
                {
                  "Fn::If": [
                    "Vol2_UseExistingEBSVolume",
                    {
                      "Fn::Select": [
                        "1",
                        {
                          "Ref": "EBSVolumeId"
                        }
                      ]
                    },
                    {
                      "Ref": "Volume2"
                    }
                  ]
                },
                {
                  "Fn::If": [
                    "Vol3_UseExistingEBSVolume",
                    {
                      "Fn::Select": [
                        "2",
                        {
