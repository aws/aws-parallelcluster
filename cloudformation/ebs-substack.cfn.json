                    {
                      "Fn::If": [
                        "Vol1_UseExistingEBSVolume",
                        {
                          "Fn::Select": [
                            "0",
                            {
                              "Ref": "EBSVolumeId"
                            }
                          ]
                        },
                        {
                          "Ref": "Volume1"
                        }
                      ]
                    },
                    {
                      "Fn::If": [
                        "Vol2_UseExistingEBSVolume",
                        {
                          "Fn::Select": [
                            "1",
                            {
                              "Ref": "EBSVolumeId"
                            }
                          ]
                        },
                        {
