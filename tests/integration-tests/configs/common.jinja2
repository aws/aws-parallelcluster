{%- macro instance(instance_key) -%}
    {%- if additional_instance_types_map -%}
        {{ additional_instance_types_map.get(instance_key, instance_key) }}
    {%- else -%}
        "{{ instance_key }}"
    {%- endif -%}
{%- endmacro -%}
